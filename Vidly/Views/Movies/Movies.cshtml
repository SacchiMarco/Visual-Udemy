@using Vidly.Classes
@using Vidly.Handler
@model Vidly.Models.Movie
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";

    MoviesHandler movies = new MoviesHandler();
    MovieClass movieClass;
    movieClass = new MovieClass("Shrek!");
    movies.MovieList.Add(movieClass );
    movieClass = new MovieClass("John Wick");
    movies.MovieList.Add(movieClass );
}

<h2>Movies</h2>

<ul class="list-group">
    @foreach (MovieClass i in movies.MovieList)
    {
        <li class="list-group-item">@i.Name</li>
    }
</ul>

